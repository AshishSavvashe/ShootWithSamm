<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.shootwithsam.fragments.AllLeadsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextLeadSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_bottom_border"
            android:hint="Customer Name / Mobile No / FranchiseeName / City / PhotoshootType"
            android:inputType="text|textNoSuggestions"
            android:lines="1"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceSmall" />

        <ListView
            android:id="@+id/listViewAllLeads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"
            android:scrollbars="none"
            android:visibility="visible" />

    </LinearLayout>

    <include layout="@layout/layout_progress_bar" />

</RelativeLayout>